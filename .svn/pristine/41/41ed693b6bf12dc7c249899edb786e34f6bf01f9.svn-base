.chapter{
    margin-bottom:20px;
}
.chapter .glyphicon{
    color:gray;
    padding-right:10px;
    font-size:14px;
}
.catalogTitle{
    font-weight:bold;
}
.catalog{
    height: 40px;
    line-height: 40px;
    padding-left: 8px;
    /*background-color: #f3f5f7;*/
    margin-bottom: 8px;
    cursor:pointer;
    font-size:12px;
    border-bottom:1px solid #F8F8F8;
}
.catalog .playBtn{
    display:none;
}
.catalog:hover{
    /*background:#14191e;
    color:white;
*/
}
.catalog:hover .playBtn{
    display: block;
    padding:0px 14px;
    background:#FA3652;
    color:black;
    float:right;
    line-height: 24px;
    margin-top:10px;
    margin-right:10px;
    border-radius:10px;
    font-size: 12px;
    color:white;
}

.ctList{
    border-bottom:1px solid #ccc;
    clear:both;
    display:block;

}
.ctListTitle{
   width:100px;

}
.ctList ul{
    float:left;
}
.ctList ul li{
    float:left;
    padding:0px 10px;
}


.avatar-uploader,
.avatar-uploader-trigger,
.avatar {
    width: 220px;
    height:140px;
}
.avatar-uploader {
    display: block;
    border: 1px dashed #d9d9d9;
    border-radius: 6px;
    cursor: pointer;
}
.avatar-uploader-trigger {
    display: table-cell;
    vertical-align: middle;
    font-size: 28px;
    color: #999;
}

.middleText{
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: flex-start;
    justify-content: flex-start;
text-align:left;
}
.glyphicon:hover{
    color:red;
    cursor:pointer;
    font-size:18px;
}
.nav-tabs{
    border:none;
}
.nav-tabs>li>a {
     margin-right:0;
    background:white;
    color:black;
     line-height: 1.42857143;
     border-top: 4px solid transparent;
     border-radius: 0;
     padding:10px 30px;
 }
.nav-tabs>li>a:hover {
    background:white;
    cursor: default;
    border:none;
    border-top:4px solid #51CA1C;
    color:#51CA1C;
}

.nav-tabs>li.active>a, .nav-tabs>li.active>a:focus, .nav-tabs>li.active>a:hover{
    color: #555;
    cursor: default;
    border:none;
    border-top:4px solid #51CA1C;
    color:#51CA1C;
}

.playerCover{
height:342px;
line-height:342px;
-webkit-background-size:cover;
background-size:cover;
text-align: center;
}
.playerMask{
position:absolute;
top:0;
left:0;
height:342px;
width:100%;
background:rgba(0,0,0,.5);
}
.customeBtn{
border-radius: 0;
padding:10px 50px;

}
.customCourseText{
font-size:18px;
font-weight:bold;
padding-top:20px;
}
.iconHover{
    color:white;
}
.iconHover:before{
    line-height:342px;
}
.iconHover:hover{
    color:blue;
    font-size:120px;
}
